<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SaporiDeItalia.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SaporiDeItalia.Views"
    xmlns:root="clr-namespace:SaporiDeItalia"
    Shell.FlyoutBehavior="Flyout"
    Title="SaporiDeItalia">

    <ShellContent
        Title="Home" ContentTemplate="{DataTemplate root:MainPage}" Route="MainPage" />
    <ShellContent Title="Menu" ContentTemplate="{DataTemplate views:MenuPage}" Route="MenuPage" />
    <ShellContent Title="Contact" ContentTemplate="{DataTemplate views:ContactPage}" Route="ContactPage" />
    <ShellContent Title="Location" ContentTemplate="{DataTemplate views:LocationPage}" Route="LocationPage" />

</Shell>
